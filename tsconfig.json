{
  "include": ["src"],
  "exclude": ["dist", "src/*.test.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  }
}
